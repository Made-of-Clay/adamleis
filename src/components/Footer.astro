---
import IconLink from "./IconLink.astro";
---

<footer class="text-sm leading-[1.75] mt-4">
  <div
    class:list={[
      "justify-self-center flex items-center content-center",
      "text-text-bold",
      "py-2",
    ]}
  >
    <IconLink
      href="https://www.linkedin.com/in/adam-leis-75018b23/"
      iconClasses="fa-brands fa-linkedin"
      iconTitle="Blogster on GitHub"
    />
    <IconLink
      href="https://github.com/Made-of-Clay"
      iconClasses="fa-brands fa-github"
      iconTitle="Blogster on GitHub"
    />
    <IconLink
      href="https://x.com/theNthAdam"
      iconClasses="fa-brands fa-twitter"
      iconTitle="Dinesh on Twitter"
    />
  </div>
</footer>

<style>
  footer {
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .gradient-link {
    position: relative;
    box-decoration-break: clone;
    text-decoration: none;
  }

  .gradient-link:hover:after {
    transform: translateZ(0) scale(1);
  }

  .gradient-link:after {
    left: 0;
    right: 0;
    bottom: -2px;
    content: "";
    height: 2px;
    position: absolute;
    transform: translateZ(0) scaleX(0);
    transform-origin: left center;
    transition: all 0.15s ease-in-out;
  }
</style>
