@tailwind base;

html, body, #app {
    height: 100%;
    width: 100%;
}

h1 {
    @apply text-2xl;
}
h2 {
    @apply text-xl;
}
h3 {
    @apply text-lg;
}
a {
    @apply text-blue-600;
    transition: all 0.3s;

    &:hover {
        @apply text-blue-800;
    }
}

input {
    @apply rounded-sm p-1;
}

@tailwind components;
@tailwind utilities;